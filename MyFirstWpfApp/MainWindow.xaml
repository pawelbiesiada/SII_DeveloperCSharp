<Window x:Class="MyFirstWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWpfApp"
        mc:Ignorable="d"
        Title="My Wpf App" Height="350" Width="500" Background="LightBlue" MouseMove="Window_MouseMove" Loaded="Window_Loaded">
    <Canvas>
        <TextBox x:Name="txtDescrption" Canvas.Left="45" TextWrapping="Wrap" Text="Hi There!!!" Canvas.Top="39" Width="304" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtContent" Canvas.Left="45" TextWrapping="Wrap" Canvas.Top="71" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Height="151" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnOk" Content="OK" Canvas.Left="198" Canvas.Top="71" RenderTransformOrigin="-0.101,-0.399" HorizontalAlignment="Left" VerticalAlignment="Center" Width="70" Click="btnOk_Click"/>
        <TextBlock Canvas.Left="105" TextWrapping="Wrap" Text="Mouse position:" Canvas.Top="10"/>
        <TextBlock x:Name="txtPosition" Canvas.Left="198" TextWrapping="Wrap" Canvas.Top="10"/>
        <ComboBox x:Name="cbxNames" Canvas.Left="197" Canvas.Top="114" Width="120" SelectionChanged="cbxNames_SelectionChanged"/>

    </Canvas>
</Window>
